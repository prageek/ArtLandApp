<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mymakecents.artland.artland.ScanActivity">
    <TextView
        android:id="@+id/tv_code_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#####"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="385dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_scan"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_scan" />

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="345dp"
        android:layout_height="49dp"
        android:text="Start scan"
        android:background="?attr/selectableItemBackground"
        android:layout_below="@+id/tv_code_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp" />
</android.support.constraint.ConstraintLayout>
